<!DOCTYPE html>
<html lang="en">





<body>

  
    <%- include ('../includes/header.ejs') %>
    <%- include ('../includes/nav.ejs') %> 
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Donor</h4>
                    </div>
                    <!-- <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="/donors/adddonor" class="btn btn-primary float-right btn-rounded"><i class="fa fa-plus"></i> Add Donor</a>
                    </div> -->
                </div>
                <form action="" method="POST">
                <div class="row filter-row">
                   
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group form-focus">
                            <label class="focus-label">Donor Name  </label>
                            <input type="text" class="form-control floating" name="search">
                        </div>
                    </div>
                   
                    <div class="col-sm-6 col-md-3">
                       <button formaction="/donors/search" class="btn btn-success btn-block">Search</button>
                    </div>
                </div>
                </form>
            
                <div class="row">
                    <div class="col-md-12">
						<div class="table-responsive">
                            <table class="table table-striped custom-table">
                                <thead>
                                    <tr>
                                        <th style="min-width:100px;">ID</th>
                                        <th>Donor Name</th>
                                        <th>Email</th>
                                        <th style="min-width: 110px;">Blood Type</th>
                                        <th>Date of Birth</th>
                                        <th>Phone</th>
                                        <th>Gender</th>
                                        <th>Address</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < list.length; i++){ %>
									
                                        
									<tr>
                                        <td>
											<%= list[i].userid %>
										</td>
                                        <td><%= list[i].username %></td>
                                        <td><%= list[i].email %></td>
                                        <td><%= list[i].bloodtype %></td>
                                        <td><%= list[i].dob %></td>
                                        <td><%= list[i].phone %></td>
                                        <td><%= list[i].gender %></td>
                                        <td><%= list[i].address %></td>
                                        
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="/donors/editdonor/<%= list[i].userid %>"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="/donors/deletedonor/<%= list[i].userid %>" ><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                        <% } %>
                                    </tr>
                                </tbody>
                            </table>
						</div>
                    </div>
                </div>
            </div>
            
        </div>
		
    </div>
    <div class="sidebar-overlay" data-reff=""></div>

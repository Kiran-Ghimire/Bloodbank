<!DOCTYPE html>
<html lang="en">





<body>

  
    <%- include ('../includes/header.ejs') %>
    <%- include ('../includes/nav.ejs') %> 
        <div class="page-wrapper"> 
            <div class="content">
                <div class="row">
                    <div class="col-sm-8 col-6">
                        <h4 class="page-title">User Requests</h4>
                    </div>
                    <!-- <div class="col-sm-4 col-6 text-right m-b-30">
                        <a href="/userrequests/addRequest" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Request</a>
                    </div> -->
                </div>
                <form action="" method="POST">
                    <div class="row filter-row">
                       
                        <div class="col-sm-6 col-md-3">
                            <div class="form-group form-focus">
                                <label class="focus-label">Donor Name </label>
                                <input type="text" class="form-control floating" name="search">
                            </div>
                        </div>
                       
                        <div class="col-sm-6 col-md-3">
                           <button formaction="/userrequests/search" class="btn btn-success btn-block">Search</button>
                        </div>
                    </div>
                    </form>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table">
                                <thead>
                                    <tr>
                                        
                                        <th>User ID</th>
                                        <th>Donor ID</th>
                                        <th>Donor name</th>
                                        <th>Date of Birth</th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>Bloodtype</th>
                                        
                                        <th>Gender</th>
                                        <th>Phone</th>
                                       
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < list.length; i++){ %>
                                    <tr>
                                        
                                        <td>
                                            <strong> <%= list[i].userid %> </strong>
                                        </td>
                                        <td>
                                            <strong> <%= list[i].donorid %> </strong>
                                        </td>
                                        <td><%= list[i].donorname %></td>
                                        <td><%= list[i].dob %></td>
                                        <td><%= list[i].email %> </td>
                                        <td><%= list[i].address %></td>
                                        <td><%= list[i].bloodtype %></td>
                                        <td><%= list[i].gender %></td>
                                        <td
                                         class="text-center"
                                         >
                                            <%= list[i].phone %>
                                        </td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="/approverequest/<%= list[i].userid%>/<%= list[i].donorid%>"><i class="fa fa-pencil m-r-5"></i> Approve</a>
                                                    <a class="dropdown-item" href="/declinerequest/<%= list[i].userid%>" ><i class="fa fa-trash-o m-r-5"></i> Decline</a>
                                                </div> 
                                            </div>
                                        </td>
                                        <% } %>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
	
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="assets/js/jquery-3.2.1.min.js"></script>
	<script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.dataTables.min.js"></script>
    <script src="assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="assets/js/jquery.slimscroll.js"></script>
    <script src="assets/js/select2.min.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="assets/js/app.js"></script>
</body>


